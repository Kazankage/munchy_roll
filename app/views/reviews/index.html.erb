<%= render "shared/flasherror"%>

<h1> All reviews about manga here! </h1>


<% @reviews.each do |review| %>
    <div class="manga-post" >
<h3>
 <%= review.title%> - <%= review.manga.series %> <p>
 by <%= review.manga.user.username%>
<p>
 <%#= image_tag(review.manga.picture, :width => 300, :height => 250) if review.manga.picture.attached? %><p>
<p>Rating: <%= review.rating %> / 5</h3>
<p> 
<h5><p> - <%= review.summary %></h5>

- <%= link_to "Edit", edit_review_path(review)%> | <%= link_to "Delete", review, method: :destroy, data: { confirm: "Are you sure you want to delete this review?"}%>
<p>
</div><br>
<% end %>

