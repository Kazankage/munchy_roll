<h1>Most Popular User: <%= @user.username%></h1>
<br>



<% @user.mangas.each do |manga| %>
  <div class= "manga-post">
    <div class="font">

      <%= render "shared/flasherror"%> 
    
    <h2><%= link_to manga.series, manga.link, class: 'link-to-colour', :target => "_blank"%><p></h2>
    <%= image_tag(manga.picture, :width => 300, :height => 250) if manga.picture.attached? %><p>
    - Summary: <%= manga.description%> <p>
    - Publishers: <%= manga.publishers %>  <p>
    - Posted by: <%= manga.user.username%><p>
    - Genre: <%= manga.genre.name%><p>
    - Write a <%= link_to "review", new_manga_review_path(manga.id)%><p>
     <%= link_to "Edit", edit_manga_path(manga) if manga.user == current_user%> 
     <%= link_to "| Delete", manga, method: :delete, data: { confirm: "Are you sure you want to delete this manga?"} if manga.user == current_user %>
   </p></div><br>

   </div>
     <p>
   <%end%>

 
